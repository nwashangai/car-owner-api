{
  "name": "y",
  "version": "0.0.0",
  "description": "",
  "private": true,
  "main": "app.js",
  "scripts": {
    "start": "npm run migrate && npm run seed:all && node ./bin/start",
    "start:dev": "node ./bin/start",
    "test": "export NODE_ENV=test && npm run migrate:undo && npm run migrate && npm run seed:all && mocha --recursive './test/**/*.test.js' --compilers js:babel-core/register --exit",
    "cover": "nyc npm run test && nyc report --reporter=lcov --exit",
    "coveralls": "nyc report --reporter=lcov --reporter=text-lcov | ./node_modules/coveralls/bin/coveralls.js",
    "createdb": "node_modules/.bin/sequelize db:create $OPERATION",
    "drop:create:db": "node_modules/.bin/sequelize db:drop codiv19 && node_modules/.bin/sequelize db:create codiv19",
    "migrate": "node_modules/.bin/sequelize db:migrate",
    "migrate:undo": "node_modules/.bin/sequelize db:migrate:undo",
    "seed:all": "npm run unseed:all && node_modules/.bin/sequelize db:seed:all",
    "unseed:all": "node_modules/.bin/sequelize db:seed:undo:all",
    "lint": "eslint --fix src"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "@sendgrid/mail": "^6.4.0",
