    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "g-sheets-api": "^1.3.0",
    "handlebars": "^4.1.2",
    "http-errors": "^1.7.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "nyc": "^14.1.1",
    "pg": "^7.12.0",
    "pg-hstore": "^2.3.3",
    "pingmydyno": "^1.5.1",
    "sequelize": "^5.12.3",
    "sequelize-cli": "^5.5.0",
    "sinon": "^7.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/sequelize": "^4.28.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-mocha": "^6.0.0",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "mocha": "5.2.0"
  },
